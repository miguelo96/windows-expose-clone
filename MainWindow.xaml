<Window x:Class="WindowScatter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window Scatter" 
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        AllowsTransparency="False"
        Background="Black"
        KeyDown="Window_KeyDown"
        Topmost="True">
    <Canvas ClipToBounds="True">
        <!-- Blurred wallpaper background - positioned precisely -->
        <Image x:Name="BackgroundImage" 
               Panel.ZIndex="0"/>

        <!-- Canvas for window thumbnails -->
        <Canvas x:Name="ScatterCanvas" 
                Background="Transparent"
                Panel.ZIndex="1"
                Width="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth}"
                Height="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualHeight}"/>
    </Canvas>
</Window>